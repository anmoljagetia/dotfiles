[alias]
	dfm = diff --color --color-words --abbrev
[color]
	ui = always
[apply]
	whitespace = fix
[core]
	excludesfile = ~/.gitignore_global
	attributesfile = ~/.gitattributes
	whitespace = fix,space-before-tab,tab-in-indent,trailing-space
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
